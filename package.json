{
  "name": "my-portfolio",
  "version": "1.0.0",
  "description": "Software Engineering Portfolio for Michael Jiang",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "compress:css": "node-sass css/style.comp.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiangmichael1/My_Portfolio.git"
  },
  "author": "Michael Jiang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jiangmichael1/My_Portfolio/issues"
  },
  "homepage": "https://github.com/jiangmichael1/My_Portfolio#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "animejs": "^3.2.1",
    "live-server": "^1.2.1"
  }
}
